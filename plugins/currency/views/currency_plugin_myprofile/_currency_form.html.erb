<%= labelled_form_for :currency, @currency, {:action => (@currency.new_record? ? :create : :edit)} do |f| %>
  <%= f.text_field :name %>
  <%= f.text_area :description %>
  <%= f.text_field :symbol %>

  <%= f.submit _('OK'), :class => 'currency-action-button' %>
  <%= colorbox_close_button _('cancel') %>
<% end %>
