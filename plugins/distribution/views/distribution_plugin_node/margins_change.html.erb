<div id="distribution-node-margin-change" class="distribution-plugin-popin">
  <h1><%= t('distribution_plugin.views.node.margins_change.change_default_margin') %></h1>

  <% form_remote_for :node, @node, :url => {:controller => :distribution_plugin_node, :action => :margins_change, :id => @node} do |f| %>

    <div>
      <%= _("By changing the default margin of commercialization, the products " +
            "that are \"use the default margin\" marked will automatically have their " +
            "margin updated. The open sessions won't be affected.") %>
    </div>

    <%= labelled_field f, :margin_percentage, t('distribution_plugin.views.node.margins_change.new_margin'), f.text_field(:margin_percentage) + ' ' + t('distribution_plugin.views.node.margins_change.%') %>

    <div>
      <%= check_box_tag :apply_to_all, 1, false, :style => 'float: left'  %>
      <%= label_tag :apply_to_all, t('distribution_plugin.views.node.margins_change.force_apply_to_all_pr'), :class => 'line-label' %>
    </div>
    <div class="cleaner"></div>

    <%= submit_tag t('distribution_plugin.views.node.margins_change.confirm') %>
    <%= colorbox_close_link t('distribution_plugin.views.node.margins_change.cancel') %>
  <% end %>
</div>

