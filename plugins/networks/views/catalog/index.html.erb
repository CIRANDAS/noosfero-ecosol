<% if not profile.node? %>
  <%= render :file => "#{Rails.root}/app/views/catalog/index.rhtml" %>
<% else %>
  <% profile.nodes.each do |node| %>
    <% products = node.products.paginate(:order => 'available DESC, highlighted DESC, name ASC', :per_page => 6, :page => 1) %>
    <h2> <%= node.name %> </h2>
    <%= render "catalog/products", :products => products, :categories => nil %>
  <% end %>
<% end %>
