<h2>
  <% if session.status == 'new' %>
    <div class="session-edit-link"><%= _('New session') %></div>
  <% else %>
    <%= link_to _('Order Session:') + ' ' + session.start.to_s + ' / ' + session.name,
      {:action => 'edit', :profile => profile.identifier, :id => session.id },
      :class => "session-edit-link" %>
  <% end %>
</h2>
<%= render :partial => 'timeline', :locals => {:session => session} if session.status != 'new' %>
