<div id="exchange-exchange_wrapper">

  <h1> <%= _('Exchange Negociation') %> </h1>

  <div id="exchange-header">

    <%= render :partial => "states", :locals => {:exchange => @exchange} %>

    <div id="exchange-enterprise_headers">

      <div id="exchange-enterprise_profile">
        <div id="exchange-profile_thumb">
          <%= link_to profile_image(profile, :thumb), profile.url %>
        </div>
        <div id="exchange-profile-name"><%= profile.name %></div>
      </div>

      <div id="exchange-enterprise_theother">
        <div id="exchange-theother_thumb">
          <%= link_to profile_image(@theother, :thumb), @theother.url %>
        </div>
        <div id="exchange-theother-name"><%= @theother.name %></div>
      </div>

      <div id="exchange-exchange_symbol"></div>

      <div class="clean"></div>
    </div>
  </div>

  <% if @proposal.state == "accepted" %>

    <% if @exchange.state == "concluded" %>
      <div style="overflow:hidden"><p style="float:right"><%= _('Concluded at %s') % @exchange.concluded_at.strftime(_("%Y/%m/%d @ %H:%Mh")) %></p></div>
    <% end %>

    <div id="exchange-accepted_header">
      <h3>
        <%= _('Exchange arranged between <strong> %{origin} </strong> & <strong> %{target} </strong>') % {
          :origin => @origin.name, :target => @target.name
        } %>
      </h3>
    </div>

    <%= render :partial => "evaluation", :object => @exchange %>
    <hr />
    <%= render :partial => "exchange_summary", :locals => {:proposal => @proposal} %>
    <hr />
    <%= _('Negociation history') %>

  <% end %>

  <%= render :partial => "proposals", :object => @proposals %>

</div>
