<div id='volunteers-periods' class="field">
  <%= f.label :volunteers_periods, t('volunteers_plugin.views.myprofile.volunteers_periods') %>

  <%= f.fields_for 'volunteers_periods[]', owner.volunteers_periods do |ff| %>
    <% owner.volunteers_periods.each do |period| %>
      <div>
        <%= render 'volunteers_plugin_myprofile/period', f: ff, period: period %>
      </div>
    <% end %>

    <div id="volunteers-periods-template" style="display: none">
      <%= render 'volunteers_plugin_myprofile/period', f: ff, period: VolunteersPlugin::Period.new %>
    </div>
  <% end %>

  <%= link_to_function t('volunteers_plugin.views.myprofile.add_period'), 'volunteers.add()' %>
</div>
