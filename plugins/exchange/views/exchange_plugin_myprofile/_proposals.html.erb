    function add_unregistered_item_show_form (enterprise){
       var e = document.getElementById('exc-plg-add-money' + '-' + enterprise);
       e.className = 'exchange-button-console exc-plg-add-money-active'
       var e = document.getElementById('exc-plg-add-unreg-item' + '-' + enterprise);
