#!/usr/bin/env ruby

# Contants
Production = false
PluginsClasses = ["CmsLearningPlugin", "CurrencyPlugin", "EscamboPlugin", "EvaluationPlugin", "ExchangePlugin", "SnifferPlugin", "SolrPlugin"]

def echo text
  puts "=== #{text}"
end
def run cmd, options = {}
  echo "$ #{cmd}"
  output = `#{cmd}`
  puts output if options[:verbose]
end

solr_first_enable = !File.symlink?('config/solr')
require 'rubygems'
require 'active_support/all'
Plugins = PluginsClasses.map{ |p| p.underscore.gsub /_plugin$/, '' }
Plugins.each do |plugin|
  run "script/noosfero-plugins disable #{plugin}"
  run "script/noosfero-plugins enable #{plugin}"
end

echo 'Loading rails'
require File.dirname(__FILE__) + '/../config/boot'
require File.dirname(__FILE__) + '/../config/environment'

echo 'Loading (or creating) the environment'
e = Environment.default 
unless e
  e = Environment.create! :name => "set latter", :is_default => true
  if Production
    e.domains.create! :name => 'escambo.org.br', :is_default => true
    e.domains.create! :name => 'escambo.org'
  else
    e.domains.create! :name => '0.0.0.0', :is_default => true
  end
end
e.name = 'ESCAMBO'
e.save

echo 'Loading categories, units, certifiers and qualifiers'
database = Rails.configuration.database_configuration[Rails.env]['database']
run "psql #{database} < db/categories.sql"
run "psql #{database} < db/qualifiers-and-certifiers.sql"
run "psql #{database} < db/units.sql"
Category.update_all ['environment_id = ?', e.id]
Qualifier.update_all ['environment_id = ?', e.id]
Certifier.update_all ['environment_id = ?', e.id]
Unit.update_all ['environment_id = ?', e.id]

echo 'Setting theme'
e.theme = 'escambo'
e.save!

echo 'Enabling plugins in environment'
e.enabled_plugins = PluginsClasses
e.save!

echo 'Enable and disable features'
e.disable 'disable_products_for_enterprises'
e.enable 'skip_new_user_email_confirmation'
e.enable 'send_welcome_email_to_new_users'
e.enable 'disable_asset_products'
e.save!

echo 'Setup templates and existing profiles'
e.layout_template = 'nobars'
e.save
profiles = [e.person_template, e.community_template, e.enterprise_template]
profiles += Profile.all
profiles.each do |profile|
  profile.theme = 'escambo'
  profile.update_layout_template 'nobars'
  profile.save
end

echo 'Set environment currency'
e.currency_unit = 'R$'
e.currency_separator = ','
e.currency_delimiter = '.'
e.save

echo 'Set environment fields'
e.settings[:custom_enterprise_fields] = {"display_name"=>{"required"=>"false", "signup"=>"false", "active"=>"false"}, "contact_person"=>{"required"=>"false", "signup"=>"false", "active"=>"false"}, "business_name"=>{"required"=>"false", "signup"=>"false", "active"=>"false"}, "country"=>{"required"=>"false", "signup"=>"false", "active"=>"false"}, "acronym"=>{"required"=>"false", "signup"=>"false", "active"=>"false"}, "state"=>{"required"=>"false", "signup"=>"true", "active"=>"true"}, "management_information"=>{"required"=>"false", "signup"=>"false", "active"=>"false"}, "address_reference"=>{"required"=>"false", "signup"=>"false", "active"=>"false"}, "description"=>{"required"=>"false", "signup"=>"false", "active"=>"false"}, "contact_phone"=>{"required"=>"false", "signup"=>"false", "active"=>"false"}, "zip_code"=>{"required"=>"false", "signup"=>"true", "active"=>"true"}, "district"=>{"required"=>"false", "signup"=>"false", "active"=>"false"}, "legal_form"=>{"required"=>"false", "signup"=>"false", "active"=>"false"}, "tag_list"=>{"required"=>"false", "signup"=>"false", "active"=>"false"}, "foundation_year"=>{"required"=>"false", "signup"=>"false", "active"=>"false"}, "city"=>{"required"=>"false", "signup"=>"true", "active"=>"true"}, "address"=>{"required"=>"false", "signup"=>"true", "active"=>"true"}, "historic_and_current_context"=>{"required"=>"false", "signup"=>"false", "active"=>"false"}, "economic_activity"=>{"required"=>"false", "signup"=>"false", "active"=>"false"}, "activities_short_description"=>{"required"=>"false", "signup"=>"false", "active"=>"false"}, "template_id"=>{"required"=>"false", "signup"=>"false", "active"=>"false"}, "organization_website"=>{"required"=>"false", "signup"=>"false", "active"=>"false"}, "contact_email"=>{"required"=>"false", "signup"=>"false", "active"=>"false"}}
e.settings[:custom_person_fields] = {"preferred_domain"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "area_of_study"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "nationality"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "cell_phone"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "nickname"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "description"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "country"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "custom_area_of_study"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "custom_formation"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "comercial_phone"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "contact_phone"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "state"=>{"signup"=>"true", "required"=>"false", "active"=>"true"}, "sex"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "zip_code"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "district"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "city"=>{"signup"=>"true", "required"=>"false", "active"=>"true"}, "professional_activity"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "contact_information"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "address_reference"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "organization_website"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "formation"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "image"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "birth_date"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "schooling"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "address"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}, "organization"=>{"signup"=>"false", "required"=>"false", "active"=>"false"}}
e.save

if solr_first_enable
  echo 'Solr was enabled, reindexing'
  run 'cp plugins/solr/config/solr.yml.dist plugins/solr/config/solr.yml'
  run 'rake solr:download', :verbose => true
  run 'rake solr:start', :verbose => true
  run 'rake solr:reindex', :verbose => true
end
