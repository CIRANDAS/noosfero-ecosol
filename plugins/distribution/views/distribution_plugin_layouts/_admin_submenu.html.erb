<%
  urls = [
    [t('distribution_plugin.views.layouts._admin_submenu.orders_cycles'), {:controller => :distribution_plugin_session, :action => :index, :profile => profile.identifier}, false],
    #[t('distribution_plugin.views.layouts._admin_submenu.parcels'), {:controller => :distribution_plugin_parcel, :action => :index, :profile => profile.identifier}, false],
    [t('distribution_plugin.views.layouts._admin_submenu.products'), {:controller => :distribution_plugin_product, :action => :index, :profile => profile.identifier}, false],
    [t('distribution_plugin.views.layouts._admin_submenu.suppliers'), {:controller => :distribution_plugin_supplier, :action => :index, :profile => profile.identifier}, false],
    #[t('distribution_plugin.views.layouts._admin_submenu.members'), {:controller => :distribution_plugin_collective, :action => :members, :profile => profile.identifier}, true],
  ]
%>
<div class='menu-button-container'>
  <% urls.each do |name, url, exact| %>
    <%= link_to name, url, :class => 'menu-button' +
      ((params[:controller] == url[:controller].to_s and (!exact or params[:action] == url[:action].to_s)) ? ' menu-selected' : '') %>
  <% end %>
</div>
