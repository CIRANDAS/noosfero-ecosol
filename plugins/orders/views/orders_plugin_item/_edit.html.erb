  <% if @quantity_consumer_ordered_less_than_minimum and @quantity_consumer_ordered_less_than_minimum == item.id %>
    <div class=distribution-error-message>
      <%= t('orders_plugin.views.item._edit.this_product_requires') % {:value => product.minimum_selleable_localized} %>
    </div>
  <% end %>

  <%= render "orders_plugin_item/edit_fields", :order => order, :item => item, :product => product, :actor_name => actor_name %>

</div>
