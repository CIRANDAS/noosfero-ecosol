<%
  urls = [
    [_("Sessions"), {:controller => 'distribution_plugin_session', :action => 'index', :profile => profile.identifier}, false],
    [_("Parcels"), {:controller => 'distribution_plugin_parcel', :action => 'index', :profile => profile.identifier}, false],
    [_("Our products"), {:controller => 'distribution_plugin_collective', :action => 'our_products', :profile => profile.identifier}, true],
    [_("Suppliers"), {:controller => 'distribution_plugin_collective', :action => 'suppliers', :profile => profile.identifier}, true],
    [_("Members"), {:controller => 'distribution_plugin_collective', :action => 'members', :profile => profile.identifier}, true],
  ]
%>
<% urls.each do |name, url, exact| %>
  <%= link_to name, url, :class => 'menu-entry' +
    ((params[:controller] == url[:controller] and (!exact or params[:action] == url[:action])) ? ' menu-selected' : '') %>
<% end %>
