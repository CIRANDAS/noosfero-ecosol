<div id="knowledges">
  <h3><%= _('Knowledges') %></h3>

  <% unless all %>
    <span class="see-all"><%= link_to _("See all"), {:action => :knowledges, :profile => profile.identifier} %></span>
  <% end %>

  <% if profile == @active_organization %>
    <span class="see-all"><%= link_to _("Add"), {:controller => :cms, :action => :new, :profile => profile.identifier, :type => "CmsLearningPluginLearning"} %></span>
  <% end %>

  <% knowledges = @profile.knowledges %>
  <% knowledges = knowledges.first(4) unless all %>

  <% knowledges.each do |knowledge| %>
    <%= render :partial => 'snippets/cms_learning_plugin_learning', :locals => {:knowledge => knowledge} %>
  <% end %>
</div>
