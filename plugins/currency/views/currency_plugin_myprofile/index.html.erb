<div id="currency-wrap">

  <div id="currency-organized">
    <h2> <%= _('Currencies organized by your enterprise') %> </h2>

    <%= link_to _('Create new currency'), {:action => :create}, :class => 'colorbox currency-action-button' %>

    <% @currencies.each do |currency| %>
      <%= render :partial => 'currency', :object => currency %>
    <% end %>
  </div>

  <div id="currency-accepted">
    <h2> <%= _('Currencies already accepted') %> </h2>

    <%= link_to _('Accept a new currency'), {:action => :accept}, :class => 'colorbox currency-action-button' %>
  </div>

</div>
