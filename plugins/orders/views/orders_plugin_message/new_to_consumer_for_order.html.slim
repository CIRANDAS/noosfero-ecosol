.popin.consumers-coop-plugin-message
  h1= t'views.message.new_to_consumer_for_order.message_to_member_con', consumer: @order.consumer_data[:name]
  = form_tag params, remote: true do
    = render 'fields'
    div
      = check_box_tag :include_order, 1, true, style: 'float: left'
      = label_tag :include_order, t('views.message.new_to_consumer_for_order.include_reference_to_'), class: 'line-label'

    = submit_tag t('views.message.new_to_consumer_for_order.send'), class: 'action-button'
    = modal_close_link t('views.message.new_to_consumer_for_order.cancel')
