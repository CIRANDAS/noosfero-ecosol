<% unless theme_responsive? %>
  <%= render file: "#{Rails.root}/app/#{__FILE__[__FILE__.index('views/')..-1]}" %>
<% else %>

<div class="row">
  <div class="col-lg-8 col-md-8 col-sm-6 text-left"><h2><%= filter_title(@asset, @filter) %></h2></div>
  <div class="col-lg-4 col-md-4 col-sm-6">
      <%= display_selector(@asset, params[:display]) %>
      <%= filter_selector(@asset, @filter) %>
  </div>
</div>

<% end %>
