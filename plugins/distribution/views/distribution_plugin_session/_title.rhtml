<h2>
  <% if session.new_record? %>
    <div class="session-edit-link"><%= _('New cycle') %></div>
  <% else %>
    <%= link_to _('Order Cycle: ') + session.name_with_code, {:action => 'edit', :id => session.id }, :class => "session-edit-link" %>
  <% end %>
</h2>
<%= render :partial => 'timeline', :locals => {:session => session} unless session.new_record? %>
