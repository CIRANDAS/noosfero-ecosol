<%
  actions = true if actions.nil? and @admin
  timeline = true if actions.nil? and @admin
  listing = false if listing.nil?
%>

<h4>
  <% if cycle.new? %>
    <div class="cycle-edit-link"><%= t('views.cycle._title.new_cycle') %></div>
  <% else %>
    <%= link_to "#{cycle.name}", {:action => 'edit', :id => cycle.id }, :class => "cycle-edit-link" %>
  <% end %>

  <%= t('views.cycle._brief.confirmed_orders', :count => cycle.sales.ordered.count) if listing and not cycle.new? %>
</h4>

<%= render 'timeline', :cycle => cycle, :actions => actions, :listing => listing if timeline %>

