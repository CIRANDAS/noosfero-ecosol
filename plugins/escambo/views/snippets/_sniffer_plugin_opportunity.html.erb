<% profile = interest.profile %>

<div class="escambo-snippet sniffer-plugin-interest-snippet">
  <div class="first-column">
    <div class="label">
      <%= _('Interest') %>
    </div>
  </div>

  <div class="second-column">
    <%= _('%{profile} is interest in %{interest}') % {
      :profile => link_to(profile.name, profile.url),
      :interest => link_to(interest, {:controller => :search, :query => interest})
      } %>

    <%= render :partial => 'snippets/local', :locals => {:profile => profile} %>
  </div>

  <div class="third-column">
  </div>

  <%= render :partial => 'exchange_plugin_shared/start_exchange', :locals => {:profile => profile} %>

  <div class="clean"></div>
</div>
