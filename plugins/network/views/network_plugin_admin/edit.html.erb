<h1>Edição da apresentação do nó.</h1>

<h2><%= @node.name %></h2>

<% form_for @node, :url => {:controller => 'network_plugin_admin', 
  :action => 'update', :id => @node.id} do |f| %>
  
  <p>
    <%= f.label "Descrição:" %>
    <%= f.text_area :description %>
  </p>
  <%= f.submit 'Salvar' %>
<% end %>
