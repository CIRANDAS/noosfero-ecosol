<% if @cycle.orders? or @cycle.passed_by? 'orders' %>
  <% if @cycle.orders? %>
    <% header = t('views.cycle._orders.the_orders_period_is_') %>
  <% elsif @cycle.passed_by? 'orders' %>
    <% header = t('views.cycle._orders.already_closed') %>
  <% end %>
<% end %>

<% sales = @cycle.sales.paginate(:per_page => 30, :page => params[:page]) %>
<%= render 'orders_plugin_admin/sales', :actors => @cycle.consumers, :orders_context => :cycle, :context_id => @cycle.id, :orders => sales %>

