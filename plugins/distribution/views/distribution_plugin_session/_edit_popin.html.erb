<div class="distribution-plugin-popin">
  <h1><%= t('distribution_plugin.views.session._edit_popin.cycle_editing') %></h1>

  <div>
    <% if session.valid? %>
      <%= t('distribution_plugin.views.session._edit_popin.cycle_saved') %>
    <% else %>
      <% session.errors.each_full do |msg| %>
        <div><%= msg %></div>
      <% end %>
    <% end %>
  </div>

  <div>
    <%= colorbox_close_button t('distribution_plugin.views.session._edit_popin.close') %>
  </div>

</div>
