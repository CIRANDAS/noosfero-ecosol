<%
  first = profile.stock_places.blank?
%>

<div id="stock-manage">

  <div class="subtitle">
    <%= hideable_help_text t('views.myprofile.index.help') %>
  </div>

  <div>
    <% if first %>
      <%= t('views.myprofile.index.first_place') %>
    <% else %>
      <% profile.stock_places.each do |place| %>
        <%= render 'show', :place => place %>
      <% end %>
    <% end %>
  </div>

  <div id="new" class="<%= 'open' if first %>">
    <%= render 'edit', :new => true %>
  </div>

  <%= render 'stock_plugin_products/index', :products => profile.products %>

</div>
