<div class="escambo-plugin-profile-block <%= 'bg-purple inside-border-purple' %>">
  <div class="image-profile-area" style="background-image: url('<%= profile.image.public_filename
 %>')">
    <div class="escambo-plugin-exchange-icons">  
      <% if @active_organization.has_exchanged(profile) %>
        <div class="has-exchanged"></div>
      <% end %>
      <div class="is-bookmarked"></div>
    </div>
    <a class="exchange-button" href="/exchange/"><%= _('Start Exchange') %></a>
  </div>

  <h4 style="padding:12px 0 0 0"><%= link_to profile.name, profile.url, :class => "profile_homepage_link dotted-border-bottom" %></h4>

  <div class="categories-area dotted-border-bottom">
    <%= product_categories.first(3).map{ |c| link_to c.name, c.name }.join(', ')  %>
  </div>

  <% if profile.region.present? %>
    <a class="profile_geo_location_link location-area dotted-border-bottom" href="/profile/<%= profile.identifier %>">
      <% extend SearchHelper %>
      <%= city_with_state profile.region %>
    </a>
  <% else %>
    <p class="location-area dotted-border-bottom"><%= _('Localização não foi informada.') %></p>
  <% end %>

  <p class="summary-area">
    <%= _('Já realizou %{exchange_count} trocas com %{enterprises_count} pontos de cultura.') % {:exchange_count => escambo_sumary[:exchanges_count], :enterprises_count => escambo_sumary[:enterprises_count] } %>
  </p>
</div>
