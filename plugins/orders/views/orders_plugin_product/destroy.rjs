  page.replace_html 'order-products', :partial => 'orders_plugin_consumer/products', :locals => {:order => @order}
#an empty order doesn't have a total box!
page.replace_html_if_exists "order-total-#{@order.id}", :partial => 'orders_plugin_consumer/total', :locals => {:order => @order}
page.replace_html "session-product-#{@offered_product.id.to_s}",
  :partial => "orders_plugin_product/order_edit", :locals => {
    :product => @offered_product, :order => @order, :session => @session, :ordered_product => nil}
