<h2>
  <%= t('fb_app_plugin.views.myprofile.timeline.heading') %>
</h2>

<%= form_for @timeline_config, as: :timeline_config, remote: true, url: {action: :timeline_config},
  html: {id: 'timeline-config'} do |f| %>

  <div class="panel panel-primary">
    <% FbAppPlugin::TimelineConfig::Syncs.each do |group, default_data| %>
      <% data = @timeline_config.send group %>

      <%= f.fields_for group do |ff| %>

        <div class="panel-heading">
          <%= link_to t("open_graph_plugin.lib.syncs.spec.#{group}.label"), "#group-#{group}", data: {toggle: 'collapse', parent: '#timeline-config'} %>
        </div>
        <div id="group-<%=group%>" class="panel-body collapse-in">
          <%= render "timeline_#{group}", f: ff, group: group, data: data %>
        </div>

      <% end %>
    <% end %>
  </div>

  <%= f.submit _('Save') %>
<% end %>

